#!/bin/bash

THIS_DIR=`dirname $0`/..
THIS_DIR=`readlink -f $THIS_DIR`
MU2_ROOT=$THIS_DIR/

if [ -d $MU2_ROOT/deps ]; then
    DEPS_DIR=$MU2_ROOT/deps;
fi

if [ -d $MU2_ROOT/../../deps ]; then
    DEPS_DIR=$MU2_ROOT/../../deps
fi

DEPS_DIR=`readlink -f $DEPS_DIR`

MU2_EBIN=$MU2_ROOT/ebin
WRANGLER_EBIN=$DEPS_DIR/wrangler/ebin

MU2_COMMAND="mu2_logging_mutations apply_logging $@"

USAGE="Usage: apply_instrumentation <source> <output> [<function names>] [-log_id <LogID>]"

if test -n "$1" && test -n "$2"; then
    erl -noshell -pa $MU2_EBIN -pa $WRANGLER_EBIN -s $MU2_COMMAND -s init stop
else
    echo $USAGE
fi
